<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 회원 계정 기능 -->
<mapper namespace="com.shoping.dbckd.mapper.CustomerMapper">

    <insert id="join" parameterType="com.shoping.dbckd.model.CustomerDTO">
        INSERT INTO customer (id, pw, nick, name, address, phoneCall, generalCall, email, birth)
        VALUES(#{id}, #{pw}, #{nick}, #{name}, #{address}, #{phoneCall}, #{generalCall}, #{email}, #{birth})
    </insert>

    <select id="login" resultType="com.shoping.dbckd.model.CustomerDTO">
        SELECT iden, id, nick, name, address, phoneCall, generalCall, email, birth, joinDate FROM customer WHERE id = #{id} and pw = #{pw}
    </select>

    <select id="dummy" resultType="com.shoping.dbckd.model.CustomerDTO">
        select * from customer where iden=13;
    </select>
